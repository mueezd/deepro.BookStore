@using Microsoft.Extensions.Configuration;
@using Microsoft.Extensions.Options;
@inject IConfiguration _configuration
@inject IOptionsSnapshot<NewBookAlertConfig> _newBookALertconfiguration
@{
    var newBookALertconfiguration = _newBookALertconfiguration.Get("InternalBook");
    var thirdPartyBookALertconfiguration = _newBookALertconfiguration.Get("ThirdPartyBook");

}


<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">@_configuration["AppName"]</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <ul class="navbar-nav">
                <partial name="_SignInInfo" />
            </ul>
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="AboutUs">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Book" asp-action="GetAllBooks">All Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Book" asp-action="AddNewBook">Add Book</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Dropdown link
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>


    @if (newBookALertconfiguration.DisplayNewBookAlert)
    {
        <div class="alert alert-info" role="alert">
            @newBookALertconfiguration.BookName
        </div>
    }


    @if (newBookALertconfiguration.DisplayNewBookAlert)
    {
        <div class="alert alert-danger" role="alert">
            @thirdPartyBookALertconfiguration.BookName
        </div>
    }

    
</header>